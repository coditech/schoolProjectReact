.app
  font-family helvetica, arial, sans-serif
  padding 2px

body
  background #eff8ff

.article-list .item, .col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-8, .in, .row.centerit
  text-align center

.article-dual-column
  color #56585b
  background-color #fff
  font-family Lora, serif
  font-size 14px
  .intro
    font-size 16px
    margin 0 auto 30px
    h1
      font-size 32px
      margin-bottom 15px
      padding-top 20px
      line-height 1.5
      color inherit
    p
      color #929292
      font-size 12px
      .by
        font-style italic
      .date
        text-transform uppercase
        padding 4px 0 4px 10px
        margin-left 10px
        border-left 1px solid #ddd
      a
        color #333
        text-transform uppercase
        padding-left 3px
    img
      margin-top 40px
  .text
    h2
      margin-top 28px
      font-size 16px
      font-weight 700
      color #333
    figure
      text-align center
      margin-top 30px
      margin-bottom 20px
      img
        margin-bottom 12px
        max-width 100%
  .toc
    p
      text-transform uppercase
      font-size 12px
      font-weight 700
    ul
      padding-left 20px
      font-size 13px
      margin-bottom 0
    li
      padding 2px 0
    a
      color inherit

.article-dual-column .text h2, .article-dual-column .text p
  line-height 1.45
  margin-bottom 20px

@media (min-width: 768px)
  .article-dual-column
    .text
      p
        font-size 16px
      h2
        font-size 20px

@media (max-width: 767px)
  .article-dual-column
    .toc
      border 1px solid #d3d3d3
      padding 20px 0 15px
      margin-bottom 20px
      border-width 1px 0

.article-list
  color #313437
  background-color #fff
  p
    color #7d8285
  h2
    font-weight 700
    margin-bottom 40px
    padding-top 40px
    color inherit
  .intro
    font-size 16px
    max-width 500px
    margin 0 auto
    p
      margin-bottom 0
  .articles
    padding-bottom 40px
  .item
    padding-top 50px
    min-height 425px
    .name
      font-weight 700
      font-size 16px
      margin-top 20px
      color inherit
    .description
      font-size 14px
      margin-top 15px
      margin-bottom 0
    .action
      font-size 24px
      width 24px
      margin 22px auto 0
      line-height 1
      display block
      color #4f86c3
      opacity .85
      transition opacity .2s
      text-decoration none
      &:hover
        opacity 1

@media (max-width: 767px)
  .article-list
    h2
      margin-bottom 25px
      padding-top 25px
      font-size 24px

input, label
  font-size 18px

.header-blue
  background linear-gradient(135deg, #851a32, #71555c)
  background-color #851a32
  padding-bottom 120px
  font-family 'Source Sans Pro', sans-serif
  .action-button
    &:hover
      color #fff
    &.btn-lg
      padding 7px 18px

@media (max-width: 767px)
  .header-blue
    padding-bottom 80px

.header-blue .action-button, .header-blue .action-button:active
  border 1px solid rgba(255, 255, 255, .7)
  border-radius 20px
  color #ebeff1
  box-shadow none
  text-shadow none
  padding 6px 15px
  background 0 0
  transition background-color .25s
  outline 0

.btn
  &.btn-default
    &.action-button
      margin-right 10px

hr
  border none
  height 1px
  color #333
  background-color #333

.divider-style
  margin-top 70px
  position relative
  margin-right 40px
  margin-left 40px
  span
    background #fff
    padding 0 20px
    position relative
    z-index 5
  &:before
    content ""
    display block
    border-top solid 1px #000
    width 100%
    height 1px
    position absolute
    top 50%
    z-index 1

.formcustom
  max-width 400px
  height 325px
  margin 20px auto
  box-shadow 0 0 40px

.letdown
  margin-top 40px

#logmein
  margin-top 20px
  margin-bottom 20px
  border-radius 90px
  background-color #fff
  border none
  width 30px
  height 30px
  &:hover
    background-color #fff
    box-shadow 0 0 10px

.in
  display block
  margin 20px auto 0
  height 30px
  border 4px

#user
  margin-top 20px

input
  padding 10px 10px 10px 5px
  display block
  width 300px
  border none
  border-bottom 1px solid #757575
  &:focus
    box-shadow 0 0 10px
    outline 0

label
  pointer-events none
  font-weight 400
  position relative
  top 54px
  display inline-block
  left -3px
  color #999
  transition .2s ease all

input:hover, label
  cursor text

.glyphicon-log-in
  margin 0 3px 3px 0

button
  &:focus
    outline 0
.underline 
  text-decoration underline
.article-right a
  &.action
    float: right


.margin-10
  margin  10px

