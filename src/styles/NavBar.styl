nav
  &.navbar
    &.navbar-school
      background #fff
      border-color #ccc
      box-shadow 0 0 2px 0 #ccc
      a
        color #f14444
      ul
        &.navbar-nav
          a
            color #f14444
            border-style solid
            border-width 0 0 2px 0
            border-color #fff
            &:hover
              border-color #f14444
        &.dropdown-menu
          border 0
          background #fff
          border-radius 4px
          margin 4px 0
          box-shadow 0 0 4px 0 #ccc
          & > li
            & > a
              color #444
              &:hover
                background #f14444
                color #fff
      .divider
        background #ccc
      button
        &.navbar-toggle
          background #f14444
          border-radius 2px
          &:hover
            background #999
          & > icon-bar
            background #fff
      span
        &.badge
          background #f14444
          font-weight normal
          font-size 11px
          margin 0 4px
      .badge
        &.new
          background rgba(255, 0, 0, 0.8)
          color #fff

nav.navbar.navbar-school ul.navbar-nav a:hover,
nav.navbar.navbar-school ul.navbar-nav a:visited,
nav.navbar.navbar-school ul.navbar-nav a:focus,
nav.navbar.navbar-school ul.navbar-nav a:active
  background #fff

.navbar-school
  margin-bottom 0
  padding-bottom 0