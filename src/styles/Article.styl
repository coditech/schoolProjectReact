.thumbnail
  position relative
  background transparent
  border 0
  .caption
    margin-top 5px
    background #abdfea
    border-radius 12px 22px
  .img-thumbnail
    &.img-responsive
      width 90%
      height 350px
      margin-top 10px
      border-radius 50% 0
.textimg
  position absolute
  top 20px
  left 0px

.spantext
  background #33b3c2
  padding 5px 10px
  border none
  border-radius 5px
  cursor pointer



.btn
  &.btn-default
    &.btn-block
      padding 12px 20px
      border none
      border-radius 4px
      cursor pointer
      &:focus
        color #f00
      &:active
        color #f00
      &:hover
        color #f00